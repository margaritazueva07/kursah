#include <stdio.h>
#include <math.h>
#include <float.h>
#include <stdlib.h>
#include <locale.h>
#include <string.h>

#define MAX_SOLUTIONS 100
#define EPSILON 1e-10
#define MAX_FILENAME 256

double f(double x);
double derivative(double x, double h);
double find_abs_min(double a, double b, double step);
double find_abs_max(double a, double b, double step);
double find_x(double Y, double a, double b, double epsilon);
void save_table_to_file(double a, double b, double step, const char* filename);

int main() {
    int choice;
    setlocale(LC_ALL, "RUS");
    printf("Программа для работы с функцией f(x)\n");
    printf("f(x) = {\n");
    printf("  ln(2-x),           x < 0\n");
    printf("  (e^(2x)-1)/(e^x-1), 0 <= x < 1\n");
    printf("  sum(n=0 to 9) [(-1)^n * x^(n+1)/sqrt(n+3)], x >= 1\n");
    printf("}\n\n");

    do {
        printf("\nМеню:\n");
        printf("1. Значение функции в точке\n");
        printf("2. Таблица значений на интервале (с сохранением в файл)\n");
        printf("3. Минимум/максимум на отрезке\n");
        printf("4. Поиск x по заданному Y\n");
        printf("5. Производная в точке\n");
        printf("0. Выход\n");
        printf("Выберите операцию: ");

        if (scanf("%d", &choice) != 1) {
            while (getchar() != '\n');
            printf("Ошибка ввода. Пожалуйста, введите число.\n");
            continue;
        }
        while (getchar() != '\n');
        switch (choice) {
        case 1: {
            double x;
            printf("Введите x: ");
            if (scanf("%lf", &x) != 1) {
                printf("Ошибка ввода. Пожалуйста, введите число.\n");
                while (getchar() != '\n');
                break;
            }
            while (getchar() != '\n');
            double result = f(x);
            if (!isnan(result)) {
                printf("f(%.6f) = %.6f\n", x, result);
            }
            else {
                printf("Ошибка: функция не определена в точке x = %.6f\n", x);
            }
            break;
        }
        case 2: {
            double a, b, step;
            printf("Введите начало интервала a: ");
            if (scanf("%lf", &a) != 1) {
                printf("Ошибка ввода. Пожалуйста, введите число.\n");
                while (getchar() != '\n');
                break;
            }
            while (getchar() != '\n');
            printf("Введите конец интервала b: ");
            if (scanf("%lf", &b) != 1) {
                printf("Ошибка ввода. Пожалуйста, введите число.\n");
                while (getchar() != '\n');
                break;
            }
            while (getchar() != '\n');
            printf("Введите шаг: ");
            if (scanf("%lf", &step) != 1) {
                printf("Ошибка ввода. Пожалуйста, введите число.\n");
                while (getchar() != '\n');
                break;
            }
            while (getchar() != '\n');
            if (step <= 0) {
                printf("Ошибка: шаг должен быть положительным числом.\n");
                break;
            }
            if (a > b) {
                printf("Ошибка: начало интервала должно быть меньше конца.\n");
                break;
            }
            char filename[MAX_FILENAME];
            printf("Введите имя файла для сохранения таблицы: ");
            if (fgets(filename, sizeof(filename), stdin) == NULL) {
                printf("Ошибка ввода имени файла.\n");
                break;
            }
            filename[strcspn(filename, "\n")] = '\0';
            if (strlen(filename) == 0) {
                strcpy(filename, "table_output.txt");
                printf("Имя файла не указано. Будет использовано имя по умолчанию: %s\n", filename);
            }
            printf("\nТаблица значений:\n");
            printf("x\t\tf(x)\n");
            printf("-----------------------\n");
            for (double x = a; x <= b; x += step) {
                double y = f(x);
                if (!isnan(y)) {
                    printf("%.6f\t%.6f\n", x, y);
                }
                else {
                    printf("%.6f\tне определена\n", x);
                }
            }
            save_table_to_file(a, b, step, filename);
            break;
        }
        case 3: {
            double a, b, step;
            printf("Введите начало отрезка a: ");
            if (scanf("%lf", &a) != 1) {
                printf("Ошибка ввода. Пожалуйста, введите число.\n");
                while (getchar() != '\n');
                break;
            }
            while (getchar() != '\n');
            printf("Введите конец отрезка b: ");
            if (scanf("%lf", &b) != 1) {
                printf("Ошибка ввода. Пожалуйста, введите число.\n");
                while (getchar() != '\n');
                break;
            }
            while (getchar() != '\n');
            printf("Введите шаг для поиска: ");
            if (scanf("%lf", &step) != 1) {
                printf("Ошибка ввода. Пожалуйста, введите число.\n");
                while (getchar() != '\n');
                break;
            }
            while (getchar() != '\n');
            if (step <= 0) {
                printf("Ошибка: шаг должен быть положительным числом.\n");
                break;
            }
            if (a > b) {
                printf("Ошибка: начало отрезка должно быть меньше конца.\n");
                break;
            }
            double min_val = find_abs_min(a, b, step);
            double max_val = find_abs_max(a, b, step);
            if (!isnan(min_val) && !isnan(max_val)) {
                printf("Наименьшее значение на отрезке: %.6f\n", min_val);
                printf("Наибольшее по модулю значение на отрезке: %.6f\n", max_val);
            }
            else {
                printf("Не удалось найти значения на отрезке (функция не определена)\n");
            }
            break;
        }
        case 4: {
            double Y, a, b, epsilon;
            printf("Введите Y: ");
            if (scanf("%lf", &Y) != 1) {
                printf("Ошибка ввода. Пожалуйста, введите число.\n");
                while (getchar() != '\n');
                break;
            }
            while (getchar() != '\n');
            printf("Введите начало интервала поиска a: ");
            if (scanf("%lf", &a) != 1) {
                printf("Ошибка ввода. Пожалуйста, введите число.\n");
                while (getchar() != '\n');
                break;
            }
            while (getchar() != '\n');
            printf("Введите конец интервала поиска b: ");
            if (scanf("%lf", &b) != 1) {
                printf("Ошибка ввода. Пожалуйста, введите число.\n");
                while (getchar() != '\n');
                break;
            }
            while (getchar() != '\n');
            printf("Введите точность epsilon: ");
            if (scanf("%lf", &epsilon) != 1) {
                printf("Ошибка ввода. Пожалуйста, введите число.\n");
                while (getchar() != '\n');
                break;
            }
            while (getchar() != '\n');
            if (epsilon <= 0) {
                printf("Ошибка: точность должна быть положительным числом.\n");
                break;
            }
            if (a > b) {
                printf("Ошибка: начало интервала должно быть меньше конца.\n");
                break;
            }
            double solution = find_x(Y, a, b, epsilon);
            if (!isnan(solution)) {
                printf("Найденное решение: x = %.6f (f(x) = %.6f)\n", solution, f(solution));
            }
            else {
                printf("Решение не найдено на заданном интервале\n");
            }
            break;
        }
        case 5: {
            double x, h;
            printf("Введите x: ");
            if (scanf("%lf", &x) != 1) {
                printf("Ошибка ввода. Пожалуйста, введите число.\n");
                while (getchar() != '\n');
                break;
            }
            while (getchar() != '\n');
            printf("Введите шаг h для вычисления производной: ");
            if (scanf("%lf", &h) != 1) {
                printf("Ошибка ввода. Пожалуйста, введите число.\n");
                while (getchar() != '\n');
                break;
            }
            while (getchar() != '\n');
            if (h <= 0) {
                printf("Ошибка: шаг должен быть положительным числом.\n");
                break;
            }
            double deriv_result = derivative(x, h);
            if (!isnan(deriv_result)) {
                printf("f'(%.6f) = %.6f\n", x, deriv_result);
            }
            else {
                printf("Производная не существует в точке x = %.6f\n", x);
            }
            break;
        }
        case 0:
            printf("Выход из программы\n");
            break;

        default:
            printf("Неверный выбор. Пожалуйста, выберите операцию из меню.\n");
        }
    } while (choice != 0);
    return 0;
}

double f(double x) {
    if (x < 0) {
        if (x >= 2) {
            return NAN;
        }
        return log(2 - x);
    }
    else if (x < 1) {
        if (fabs(x) < EPSILON) {
            return 2.0;
        }
        return (exp(2 * x) - 1) / (exp(x) - 1);
    }
    else {
        double sum = 0;
        for (int n = 0; n < 10; n++) {
            double term = pow(-1, n) * pow(x, n + 1) / sqrt(n + 3);
            sum += term;
        }
        return sum;
    }
}

double derivative(double x, double h) {
    if (fabs(x) < EPSILON || fabs(x - 1) < EPSILON) {
        return NAN;
    }
    double f_plus = f(x + h);
    double f_minus = f(x - h);
    if (isnan(f_plus) || isnan(f_minus)) {
        return NAN;
    }
    return (f_plus - f_minus) / (2 * h);
}

double find_abs_min(double a, double b, double step) {
    double min_val = DBL_MAX;
    int found = 0;
    for (double x = a; x <= b; x += step) {
        double y = f(x);
        if (!isnan(y)) {
            found = 1;
            if (y < min_val) min_val = y;
        }
    }
    if (!found) return NAN;
    return min_val;
}

double find_abs_max(double a, double b, double step) {
    double max_val = 0;
    int found = 0;
    for (double x = a; x <= b; x += step) {
        double y = f(x);
        if (!isnan(y)) {
            found = 1;
            double abs_y = fabs(y);
            if (abs_y > max_val) max_val = abs_y;
        }
    }
    if (!found) return NAN;
    return max_val;
}

double find_x(double Y, double a, double b, double epsilon) {
    double step = 0.01;
    for (double x = a; x < b; x += step) {
        double x_next = x + step;
        if (x_next > b) x_next = b;
        double f_x = f(x) - Y;
        double f_next = f(x_next) - Y;
        if (f_x * f_next <= 0 || fabs(f_x) < epsilon) {
            double left = x;
            double right = x_next;
            int iterations = 0;
            while (fabs(right - left) > epsilon && iterations < 1000) {
                double mid = (left + right) / 2;
                double f_mid = f(mid) - Y;

                if (f_x * f_mid <= 0) {
                    right = mid;
                }
                else {
                    left = mid;
                    f_x = f_mid;
                }
                iterations++;
            }
            return (left + right) / 2;
        }
    }
    return NAN;
}

void save_table_to_file(double a, double b, double step, const char* filename) {
